(set-logic HORN)

(declare-fun inv-f (Int Int Int) Bool)
(assert (forall ((A Int) (B Int) (C Int))
  (let ((a!1 (and (inv-f C B A) (= (- B C) 0) (not (= (- A C) 0)))))
       (=> a!1 false))
    ))
(assert (forall ((A Int) (B Int) (C Int))
  (=> (and (>= A 0) (>= B 0) (= C 0) (= (- B A) 0)) (inv-f C B A))))
(assert (forall ((A Int) (B Int) (C Int) (D Int) (E Int) (F Int))
  (let ((a!1 (and (not (= (- B C) 0))
                     (= (- F C) 0)
                     (= (- (+ 1 E) B) 0)
                     (= (- (+ 1 D) A) 0))))
     (let ((a!2 (or (and (= (- B C) 0)
                         (= (- F C) 0)
                         (= (- E B) 0)
                         (= (- D A) 0))
                    a!1)))
       (=> (and (inv-f C B A) a!2) (inv-f F E D))))
    ))


(check-sat)
(exit)
