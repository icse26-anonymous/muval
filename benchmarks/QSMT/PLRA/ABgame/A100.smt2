(assert
    (exists ((x Real))
        (forall ((y Real))
            (random ((z (Uniform (- (+ (+ x y) 0.5)) (+ (+ x y) 0.5))))
                (or
                    (< y 0)
                    (< 0.5 y)
                    (and
                        (<= 0 x)
                        (<= x 0.5)
                        (=>
                            (<= (+ x y) 0.5)
                            (>= (+ (+ (- (* 40 x) (* 40 y)) (* 10 z)) 100) 100)
                        )
                        (=>
                            (> (+ x y) 0.5)
                            (>= (+ (+ (- (* (- 80) x) (* 160 y)) (* 10 z)) 160) 100)
                        )
                    )
                )
            )
        )
    )
)